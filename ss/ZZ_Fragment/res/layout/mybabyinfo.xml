<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/banner_unit"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/banner_unit"
        android:padding="7dip" >

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:clickable="true"
            android:src="@drawable/booklist_menu_normal" />

        <TextView
            android:id="@+id/tv_mainpage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.8"
            android:gravity="center_horizontal"
            android:text="@string/main_page"
            android:textColor="#000"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:clickable="true"
            android:src="@drawable/back_normal" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_head" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/baby_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_launchernew" />

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/baby_photo"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/mycolor"
                    android:gravity="center_vertical"
                    android:paddingLeft="20dp"
                    android:text="基本信息"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/baby_name"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_corner_no_bottom"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="名字：夏天"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/baby_nickname"
                    style="@style/textviewstyle"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_no_corner_no_bottom"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="昵称：summer" />

                <TextView
                    android:id="@+id/baby_sex"
                    style="@style/textviewstyle"
                     android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/shape_no_corner_no_bottom"
                    android:text="性别：男" />

                <TextView
                    android:id="@+id/baby_birthday"
                    style="@style/textviewstyle"
                    android:background="@drawable/shape_bottom_corner_no_top"
                    android:text="生日：2003-08-20" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_info"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/mycolor"
                    android:paddingLeft="20dp"
                    android:text="所在班级信息"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/class_name"
                    style="@style/textviewstyle"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/shape_corner_no_bottom"
                    android:text="班级名称：小四（5）班" />

                <TextView
                    android:id="@+id/class_num"
                    style="@style/textviewstyle"
                    android:background="@drawable/shape_no_corner_no_bottom"
                    android:text="班级人数：20" />

                <TextView
                    android:id="@+id/class_teacher"
                    style="@style/textviewstyle"
                    android:background="@drawable/shape_no_corner_no_bottom"
                    android:text="班级主任：谭老师" />

                <TextView
                    android:id="@+id/class_position"
                    style="@style/textviewstyle"
                    android:background="@drawable/shape_bottom_corner_no_top"
                    android:text="班上职位：学生" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>