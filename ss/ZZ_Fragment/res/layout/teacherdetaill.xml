<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/share" />

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        android:gravity="center"
        android:paddingLeft="10.0dp"
        android:paddingRight="10.0dp" >

        <TextView
            android:id="@+id/contact_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/login_btn_cancel"
           
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/contact_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/add_contact"
            android:textSize="18.0sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/mycolor"
       
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
             android:gravity="center_horizontal"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/teacher_image"
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:src="@drawable/mypic" />

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="姓名："
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/teacher_sex"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="性别："
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/teacher_tel"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="手机号："
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/teacher_address"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="地址："
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/teacher_time"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="入职时间："
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/teacher_position"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="教师岗位："
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/teacher_self"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:background="@drawable/border"
                android:ellipsize="end"
                android:text="简介："
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>